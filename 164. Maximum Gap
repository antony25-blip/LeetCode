class Solution:
    def maximumGap(self, nums: List[int]) -> int:
        if len(nums)<2:
            return 0
        nums.sort()
        maxi=float('-inf')
        for i in range(len(nums)-1):
            cur=abs(nums[i]-nums[i+1])
            maxi=max(maxi,cur)
        return maxi
        


        
