class Solution(object):
    def isHappy(self, n):
        n1=0
        a=[]
        while(n>1) and n not in a:
            a.append(n)
            sums=0
            temp=n
            while(temp>0):
                n1=temp%10
                sums+=n1**2
                temp=temp//10
            n=sums
            
        if n==1:
            return True
        else:
            return False
        
